@model IEnumerable<AppRole>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a class="btn btn-outline-primary" asp-action="Create">Create Role</a>
<hr />

<table class="table table-sm table-bordered">
    <tr>
        <th>Id</th>
        <th>Role Name</th>
        <th>Users</th>
        <th style="width: 125px;"></th>
    </tr>

    @if(Model.Count() == 0)
    {
        <tr><td colspan="4" class="text-center">No Role</td></tr>
    }

    @foreach(var role in Model)
    {
        <tr>
            <td>@role.Id</td>
            <td>@role.Name</td>
            <td asp-role-users="@role.Id"></td>
            <td>
                 <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@role.Id">Edit</a>
                 <form asp-action="Delete" method="post" onsubmit="return confirm('emin misiniz')" style="display: inline-block;">
                      <input type="hidden" value="@role.Id" name="id" />
                      <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                </form>
            </td>
        </tr>
    }
</table>

